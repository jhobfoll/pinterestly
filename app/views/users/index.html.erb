<div class="jumbotron center">
	<h3>Users List</h3>
	<div id="Users" class="transitions-enabled">
		<table class="table table-striped">
		  <tr>
		    <th>Last Name, </th>
		    <th>First Name</th>
		    <th>Email</th>
		    <th>Phone</th>
		    <th>Created At</th>
		  </tr>
		 
			<% @users.each do |user| %>
			  <tr>
			    <td><%= user.last_name %>, </td>
			    <td><%= user.first_name %></td>
			    <td><%= user.email %></td>
				<td><%= user.phone %></td>
				<td><%= user.created_at %></td>
			
				<td><%= link_to 'Show', user_path(user) %></td>
			    <td><%= link_to 'Edit', edit_user_path(user) %></td>
				<td><%= button_to "delete", user, method: :delete, class: :destroy, data: { confirm: "You sure?" }  %></td>
				
			  </tr>
			<% end %>
		</table>
	</div>
</div>

